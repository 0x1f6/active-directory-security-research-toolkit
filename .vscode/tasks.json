{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate AD Schema Mappings",
            "type": "shell",
            "command": "uv",
            "args": ["run", "scripts/generate_mappings.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Test AD Schema Tool",
            "type": "shell", 
            "command": "uv",
            "args": ["run", "ad-schema-tool", "search", "msTS"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}